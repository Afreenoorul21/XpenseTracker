<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true"> <!-- Button is pressed -->
        <shape android:shape="rectangle">
            <solid android:color="@color/buttonPressedColor" /> <!-- Change to your desired pressed color -->
            <corners android:radius="10dp" /> <!-- Rounded corners -->
        </shape>
    </item>
    <item> <!-- Default state -->
        <shape android:shape="rectangle">
            <solid android:color="@color/buttonColor" /> <!-- Default button color -->
            <corners android:radius="10dp" /> <!-- Rounded corners -->
        </shape>
    </item>
</selector>
